------------------------------------------------------
-- üß† FUNCTIONALITY
------------------------------------------------------

-- Get Equipped Pet
local function getPet()
	char = plr.Character or plr.CharacterAdded:Wait()
	for _, tool in pairs(char:GetChildren()) do
		if tool:IsA("Tool") and tool.Name:find("Age") then
			return tool
		end
	end
end

-- Update Pet Info
local function updateLabel()
	local pet = getPet()
	petInfo.Text = "Equipped Pet: " .. (pet and pet.Name or "[None]")
end

-- Set Age to 50 Button
btn1.MouseButton1Click:Connect(function()
	local pet = getPet()
	if pet then
		for i = 3, 1, -1 do
			btn1.Text = "‚è≥ Changing Age in " .. i .. "..."
			task.wait(1)
		end
		pet.Name = pet.Name:gsub("%[Age%s%d+%]", "[Age 50]")
		updateLabel()
	else
		btn1.Text = "‚ö†Ô∏è No Pet Equipped!"
		task.wait(2)
	end
	btn1.Text = "üíú Set Age to 50"
end)

-- Add +1 Age Button
btn2.MouseButton1Click:Connect(function()
	local pet = getPet()
	local age = pet and tonumber(pet.Name:match("%[Age%s(%d+)%]"))
	if pet and age then
		if age >= 100 then
			btn2.Text = "‚ö†Ô∏è Max Age is 100!"
			task.wait(2)
		else
			for i = 3, 1, -1 do
				btn2.Text = "‚è≥ Adding +1 in " .. i .. "..."
				task.wait(1)
			end
			local newAge = age + 1
			pet.Name = pet.Name:gsub("%[Age%s%d+%]", "[Age " .. newAge .. "]")
			updateLabel()
		end
	else
		btn2.Text = "‚ö†Ô∏è No Pet Equipped!"
		task.wait(2)
	end
	btn2.Text = "üîÆ Add +1 Age"
end)

-- Live Label Updater
task.spawn(function()
	while true do
		updateLabel()
		task.wait(1)
	end
end)

-- Fade out loader and show GUI
task.delay(2.5, function()
	local tween = TweenService:Create(loadingPopup, TweenInfo.new(1), {BackgroundTransparency = 1})
	tween:Play()
	tween.Completed:Wait()
	loadingPopup:Destroy()
	frame.Visible = true
end)
